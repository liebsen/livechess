<%- contentFor('css') %>

  <title><%= game.white %> vs <%= game.black %>, <%= game.event %> </title>
  <link rel="stylesheet" href="/css/chessboard.css" />
  <style type="text/css">
    #board {
      width: 48%; 
    }
    .highlight-white {
      -webkit-box-shadow: inset 0 0 1px 6px yellow;
      -moz-box-shadow: inset 0 0 1px 6px yellow;
      box-shadow: inset 0 0 1px 6px yellow;  
    }
    .highlight-black {
      -webkit-box-shadow: inset 0 0 1px 6px blue;
      -moz-box-shadow: inset 0 0 1px 6px blue;
      box-shadow: inset 0 0 1px 6px blue;  
    }
    .status {
      display: inline-block;
      width: 100%;
      position: fixed;  
      bottom: 0;
    }
    .bar {
      background-color: rgba(0,0,0,0.1);
      cursor: pointer;
    }
    .bar-progress {
      height: 0.25rem;
      background-color: red;
      width: 0;
    }
    .nightmode .bar-progress {
      background-color: orange; 
    }
    .bar-progress.paused {
      background-color: grey;
    }
    .moreinfo,.keyboard-tips {
      display: none;
      margin-bottom: 3.5rem;
    }
    .keyboard-tips {
      margin-top: 1rem;
      margin-bottom: 0;
      color: white;
    }
    .notification {
      padding: 1rem;
      margin-bottom:0!important;
    }
    .notification h5 {
      margin: 0;
    }
    .game-container {
      padding-top: 0;
    }
    .moveindex {
      background-color: whitesmoke;
      padding: 0 .25rem;
      line-height: 1.95rem;
      border-radius: 3px;
    }
    .active {
      background-color: red;
      color: white;
    }
    @media screen and (min-width: 960px), print {
      .moreinfo {
        margin-top: 1.25rem;
      }
    }
    @media screen and (max-width: 762px), print {
      #board {
        width: 100%!important;
        margin-left:2px;
      }
      .notification {
        margin: 0 1rem;
      }
    }
  </style>

<%- contentFor('js') %>

  <script src="/js/libs/chess.js"></script>
  <script src="/js/libs/chessboard.js"></script>
  <script src="/js/game.js"></script>
 
<%- contentFor('content') %>

  <svg class="spinner-container" viewBox="0 0 44 44">
    <circle class="path" cx="22" cy="22" r="20" fill="none" stroke-width="4"></circle>
  </svg>
  
  <div class="spinner-content container">
    <div class="game-container"></div>
  </div>
  
  <div class="status">
    <span class="has-text-weight-semibold">
      <span>&nbsp;üïó <span id="speed"></span></span>
    </span>
    <div class="bar">
      <div class="bar-progress"></div>
    </div>
  </div>

  <script id="game" type="text/x-jsrender">
    <div class="content padless">
      <div class="columns">
        <div class="column">
          <div class="boardarea">
            <div class="boardhead">
              <h5 class="has-text-left">
              [[if black && black.length]]
                <span id="black">[[:black]][[if result && result.length]] ([[:~parseResult(result,'w')]])[[/if]]</span>
              [[else]]
                <span>[[:event]]</span>
              [[/if]]
              </h5>
            </div>
            <div id="board"></div>
            <div class="boardfoot">
              <h5 class="has-text-right">
              [[if white && white.length]]
                <span id="white">[[:white]][[if result && result.length]] ([[:~parseResult(result,'b')]])[[/if]]</span>
              [[else]]
                <span>[[:date]] [[:site]]</span>
              [[/if]]
              </h5>
            </div>
          </div>
        </div>
        <div class="column moreinfo">
          <div class="notification is-primary">
            <h5 class="has-text-white">‚ôõ Datos de la partida</h5>
          </div>
          <table class="table is-striped">
            <tr>
              <td colspan=2>[[:~pgnIndex(pgn,result)]]</td>
            </tr>          
          [[if event]]
            <tr>
              <td class="has-text-weight-bold">Evento</td>
              <td>[[:event]]</td>
            </tr>
          [[/if]]
          [[if round]]
            <tr>
              <td class="has-text-weight-bold">Ronda</td>
              <td>[[:round]]</td>
            </tr>
          [[/if]]
            <tr>
              <td class="has-text-weight-bold">Blancas</td>
              <td>[[:white]][[if whiteelo && whiteelo.length]] ([[:whiteelo]])[[/if]]</td>
            </tr>
            <tr>
              <td class="has-text-weight-bold">Negras</td>
              <td>[[:black]][[if blackelo && blackelo.length]] ([[:blackelo]])[[/if]]</td>
            </tr>
          [[if date]]
            <tr>
              <td class="has-text-weight-bold">Fecha</td>
              <td>[[:date]]</td>
            </tr>
          [[/if]]
          [[if site]]
            <tr>
              <td class="has-text-weight-bold">Lugar</td>
              <td>[[:site]]</td>
            </tr>
          [[/if]]
          [[if result]]
            <tr>
              <td class="has-text-weight-bold">Resultado</td>
              <td>[[:result]]</td>
            </tr>
          [[/if]]
          </table>
          <div class="notification is-info">
            <a href="#" class="showmore">
              <h5 class="has-text-white" toggle=".keyboard-tips">‚å® Atajos de teclado</h5>
            </a>
            <table class="keyboard-tips">
              <tr>
                <td>[‚¨å]</td>
                <td>Navega movimientos de la partida</td>
              </tr>
              <tr>
                <td>[‚¨ç]</td>
                <td><p>Establece velocidad de la animaci√≥n</p></td>
              </tr>
              <tr>
                <td>[SPACE]</td>
                <td><p>Pausa/Reanuda la partida</p></td>
              </tr>
              <tr>
                <td>[SHIFT] + [F]</td>
                <td><p>Invierte el tablero</p></td>
              </tr>
              <tr>
                <td>[SHIFT] + [N]</td>
                <td><p>Visi√≥n nocturna</p></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </script>  