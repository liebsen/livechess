<%- contentFor('css') %>

  <link rel="stylesheet" href="/css/chessboard.css" />
  <link rel="stylesheet" href="/css/live.css" />

<%- contentFor('js') %>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/libs/chess.js"></script>
  <script src="/js/libs/chessboard.js"></script>
  <script> var data = <%- JSON.stringify(data) %></script>
  <script src="/js/live.js"></script>

<%- contentFor('content') %>

  <div class="panel-indicator">
    <a href="#" id="flip">
      <span class="icon has-text-grey">
        <i class="fa fa-refresh"></i>
      </span>
    </a>  
    <a href="#info">
      <span class="icon has-text-grey">
        <i class="fa fa-file"></i>
      </span>
    </a>
    <a href="#action">
      <span class="icon has-text-grey">
        <i class="fa fa-cog"></i>
      </span>
    </a>
  </div>

  <div class="columns">
    <div class="column board-container">
      <div class="game-status">
        <p><span class="fa fa-info-circle"></span> <span id="status"></span></p>
      </div>    
      <div id="board"></div>
    </div>
    <div class="column panel">
      <div class="inner-panel">
        <div class="columns">
          <div class="column panel-info">
            <div class="content">
              <div class="columns is-tablet">
                <div class="column field">
                  <a href="#">
                    <div class="pull-right">
                      <span class="icon has-text-info">
                        <i class="fa fa-close"></i>
                      </span>
                    </div>
                  </a>
                </div>
              </div>
              <form method="POST" id="loadpgn">
                <input type="hidden" name="room" id="room">
                <div class="columns is-tablet">
                  <div class="column field">
                    <label class="label">Evento</label>
                    <div class="control">
                      <input name="event" class="input" type="text" placeholder="8th World Championship">
                    </div>
                  </div>

                  <div class="column field">
                    <label class="label">Lugar</label>
                    <div class="control">
                      <input name="site" class="input" type="text" placeholder="Reikiavik, Iceland">
                    </div>
                  </div>
                  
                  <div class="column field">
                    <label class="label">Fecha</label>
                    <div class="control">
                      <input name="date" class="input" type="text" placeholder="1972.11.22">
                    </div>
                  </div>

                  <div class="column field">
                    <label class="label">Blancas</label>
                    <div class="control">
                      <input name="white" class="input" type="text" placeholder="Spassky, Boris V">
                    </div>
                  </div>
                </div>
                
                <div class="columns is-tablet">
                  <div class="column field">
                    <label class="label">Negras</label>
                    <div class="control">
                      <input name="black" class="input" type="text" placeholder="Fischer, Robert James">
                    </div>
                  </div>

                  <div class="column field">
                    <label class="label">ECO</label>
                    <div class="control">
                      <input name="eco" class="input" type="text" placeholder="8th World Championship">
                    </div>
                  </div>

                  <div class="column field">
                    <label class="label">ELO Blancas</label>
                    <div class="control">
                      <input name="whiteelo" class="input" type="text" placeholder="2660">
                    </div>
                  </div>


                  <div class="column field">
                    <label class="label">ELO Negras</label>
                    <div class="control">
                      <input name="blackelo" class="input" type="text" placeholder="2785">
                    </div>
                  </div>
                </div>
                
                <div class="columns is-tablet">

                  <div class="column field">
                    <label class="label">Ronda</label>
                    <div class="control">
                      <input name="round" class="input" type="text" placeholder="3">
                    </div>
                  </div>

                  <div class="column field">
                    <label class="label">Resultado</label>
                    <div class="control">
                      <input name="result" class="input" type="text" placeholder="0-1">
                    </div>
                  </div>

                  <div class="column field is-6">
                    <label class="label">PGN</label>
                    <div class="control">
                      <textarea name="pgn" class="textarea" placeholder="1. e4 Nf6 2. e5 Nd5 3. d4 d6 4. Nf3 Bg4 5. Be2 e6 6. O-O Be7 7. h3 Bh5 8. c4 Nb6 9. Nc3 O-O 10. Be3 d5 11. c5 Bxf3 12. Bxf3 Nc4 13. b3 Nxe3 14. fxe3 b6 15. e4 c6 16. b4 bxc5 17. bxc5 Qa5 18. Nxd5 Bg5 19. Bh5 cxd5 20. Bxf7+ Rxf7 21. Rxf7 Qd2 22. Qxd2 Bxd2 23. Raf1 Nc6 24. exd5 exd5 25. Rd7 Be3+ 26. Kh1 Bxd4 27. e6 Be5 28. Rxd5 Re8 29. Re1 Rxe6 30. Rd6 Kf7 31. Rxc6 Rxc6 32. Rxe5 Kf6 33. Rd5 Ke6 34. Rh5 h6 35. Kh2 Ra6 36. c6 Rxc6 37. Ra5 a6 38. Kg3 Kf6 39. Kf3 Rc3+ 40. Kf2 Rc2+ "></textarea>
                    </div>
                  </div>

                </div>

                <div class="field is-grouped">
                  <div class="control">
                    <button type="submit" class="button is-link" id="updatebtn">Actualizar</button>
                  </div>
                  <!--div class="control">
                    <button class="button is-text">Cancelar</button>
                  </div-->
                </div>
              </form>
            </div>
          </div>

          <div class="column panel-action">
            <a href="#">
              <div class="pull-right">
                <span class="icon has-text-info">
                  <i class="fa fa-close"></i>
                </span>
              </div>
            </a>          
            <div>
              <a class="button" id="undo">Atrás</a>
              <a class="button" id="wquit">Abandona B</a>
              <a class="button" id="bquit">Abandona N</a>
              <a class="button" id="draw">Tablas</a>
            </div>

            <!--p>FEN: <span id="fen"></span></p-->
            <p><span id="pgn"></span></p>
            <hr>
            <small>URL pública</small>
            <input type="text" class="input" name="gameurl" readonly>
          </div>
        </div>
      </div>
    </div>
  </div>